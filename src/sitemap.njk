<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% set exclude = ["/search.json", "/feed.xml", "/sitemap.xml"] %}
  {% for page in collections.all %}
    {% if page.url and (page.url not in exclude) and (page.url.indexOf("/drafts/") === -1) %}
  <url>
    <loc>{{ page.url | absoluteUrl(site.url) }}</loc>
    <lastmod>{{ page.date | dateIso }}</lastmod>
  </url>
    {% endif %}
  {% endfor %}
</urlset>
