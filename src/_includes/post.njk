---
layout: base.njk
load_toc_script: true
mainClass: "main-expanded"
wrapperClass: "layout-with-toc"
---

<!-- 1. Inline TOC (Mobile) -->
{% if site.enable_toc %}
<details id="inline-toc-container" class="inline-toc">
    <summary class="inline-toc-summary">
        On this page
        <svg class="chevron" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>
    </summary>
    <ul id="inline-toc-list"></ul>
</details>
{% endif %}

<!-- 2. The Content Text -->
<div class="post-content content-col">
    <div class="post-hero">
        <p class="hero-kicker">Post</p>
        <!-- Render Title -->
        <h1 class="post-title">{{ title }}</h1>
        
        <!-- Render Date and Reading Time -->
        <div class="post-meta">
            <time class="post-title-date" datetime="{{ page.date | dateIso }}">
                {{ page.date | dateReadable }}
            </time>
            <span class="reading-time">
                <svg viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                {{ content | readingTime }}
            </span>
        </div>

        <!-- NEW: Render Tags (The Pills) -->
        {% if tags %}
        <div class="post-tags">
            {% for tag in tags %}
                {# Exclude 'posts' from the list if you use that for your collection #}
                {% if tag != "posts" %}
                    <a href="/tags/#{{ tag | slug }}">#{{ tag }}</a>
                {% endif %}
            {% endfor %}
        </div>
        {% endif %}
    </div>

    {{ content | safe }}
</div>

<!-- 3. The Sticky TOC (Desktop) -->
{% if site.enable_toc %}
<aside class="toc-col">
    <div class="toc-sticky-wrapper">
        <p class="toc-header">On This Page</p>
        <ul id="toc-list"></ul>
    </div>
</aside>
{% endif %}
