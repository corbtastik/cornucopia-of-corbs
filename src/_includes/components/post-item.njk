<li class="post-item" data-date="{{ post.date.toISOString().slice(0, 10) }}">
    <div class="post-header">
        <h2>
            <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h2>
        <span class="post-date">{{ post.date.toISOString().slice(0, 10) }}</span>
    </div>
    
    <p>{{ post.data.description }}</p>

    {# Only show tags if they exist and we aren't in a context that hides them #}
    {% if post.data.tags and not hide_tags %}
    <div class="post-tags">
        {% for tag in post.data.tags %}
            <a href="/tags/#{{ tag | slug }}">#{{ tag }}</a>
        {% endfor %}
    </div>
    {% endif %}
</li>