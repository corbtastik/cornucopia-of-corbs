    <!-- Theme & Header Logic -->
    <script>
        const themeSelect = document.getElementById('theme-select');
        const themeToggle = document.getElementById('theme-toggle');
        const html = document.documentElement;

        themeSelect.value = html.getAttribute('data-theme-set');
        themeToggle.innerText = html.getAttribute('data-mode') === 'dark' ? 'Light Mode' : 'Dark Mode';

        themeSelect.addEventListener('change', (e) => {
            html.setAttribute('data-theme-set', e.target.value);
            localStorage.setItem('theme-set', e.target.value);
        });

        themeSelect.addEventListener('keydown', (e) => {
            if (e.key !== 'ArrowUp' && e.key !== 'ArrowDown') return;
            e.preventDefault();
            const options = Array.from(themeSelect.options).filter(opt => !opt.disabled && opt.value);
            if (options.length === 0) return;
            const currentIndex = options.findIndex(opt => opt.value === themeSelect.value);
            const delta = e.key === 'ArrowUp' ? -1 : 1;
            const nextIndex = (currentIndex + delta + options.length) % options.length;
            const nextValue = options[nextIndex]?.value;
            if (!nextValue) return;
            themeSelect.value = nextValue;
            html.setAttribute('data-theme-set', nextValue);
            localStorage.setItem('theme-set', nextValue);
        });

        themeToggle.addEventListener('click', () => {
            const current = html.getAttribute('data-mode');
            const next = current === 'dark' ? 'light' : 'dark';
            html.setAttribute('data-mode', next);
            localStorage.setItem('theme-mode', next);
            themeToggle.innerText = next === 'dark' ? 'Light Mode' : 'Dark Mode';
        });

        function updateHeaderHeight() {
            const header = document.querySelector('header');
            if (header) document.documentElement.style.setProperty('--header-height-real', header.getBoundingClientRect().height + 'px');
        }
        window.addEventListener('load', updateHeaderHeight);
        window.addEventListener('resize', updateHeaderHeight);
        updateHeaderHeight();
    </script>
