<!DOCTYPE html>
<html lang="en"> <!-- Removed hardcoded data-mode/data-theme-set to prevent flash -->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} | DevBlog</title>
    
    <!-- 0. THEME BLOCKING SCRIPT (Prevents Flash of Incorrect Theme) -->
    <script>
        (function() {
            // Check localStorage or fallback to default
            // These keys now match the bottom script exactly
            const savedTheme = localStorage.getItem('theme-set') || 'corbs';
            const savedMode = localStorage.getItem('theme-mode') || 'dark';
            
            // Apply immediately before the body renders
            document.documentElement.setAttribute('data-theme-set', savedTheme);
            document.documentElement.setAttribute('data-mode', savedMode);
        })();
    </script>

    <!-- 1. Normalize/Reset (Load this FIRST) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/modern-normalize/2.0.0/modern-normalize.min.css">

    <!-- 2. Dynamic Font Configuration -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="{{ fonts.url }}" rel="stylesheet">
    <!-- Extra fonts for 'Term' theme -->
    <link href="https://fonts.googleapis.com/css2?family=Azeret+Mono:wght@400;700&family=IBM+Plex+Mono:wght@400;700&family=Inconsolata:wght@400;700&display=swap" rel="stylesheet">
    
    <!-- 3. Inject Configured Fonts as CSS Variables -->
    <style>
        :root {
            --font-family-primary: {{ fonts.primary | safe }};
            --font-family-secondary: {{ fonts.secondary | safe }};
            --font-family-monospace: {{ fonts.monospace | safe }};
        }
    </style>

    <!-- 4. Your Custom Styles (Load this LAST to override defaults) -->
    <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body>
    <header>
        <nav class="site-nav">
            <!-- 1. Left Group (Hamburger + Logo) -->
            <div class="nav-left">
                <button id="menu-btn" aria-label="Open Menu">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="3" y1="12" x2="21" y2="12"></line>
                        <line x1="3" y1="6" x2="21" y2="6"></line>
                        <line x1="3" y1="18" x2="21" y2="18"></line>
                    </svg>
                </button>
                
                <a href="/" class="logo-link" aria-label="Home">
                    <img src="https://placehold.co/100x100/eee/333?text=Logo" alt="Site Logo" class="site-logo">
                </a>
            </div>
            
            <!-- 2. Search -->
            <div class="search-container">
                <input type="text" id="search-input" placeholder="Search posts, tags, date..." autocomplete="off">
            </div>

            <!-- 3. Controls -->
            <div class="theme-controls">
                <select id="theme-select" class="theme-select" aria-label="Select Theme">
                    <optgroup label="Built-In Themes">
                        <option value="berry">Berry</option>
                        <option value="blackout">Blackout</option>
                        <option value="bluebonnet">Bluebonnet</option>
                        <option value="corbs">Corbs</option>
                        <option value="cream">Cream</option>
                        <option value="grayscale">Grayscale</option>
                        <option value="horizon">Horizon</option>
                        <option value="mongo">Mongo</option>
                        <option value="newspaper">Newspaper</option>
                        <option value="no-style">No Style</option>
                        <option value="reef">Reef</option>
                        <option value="reveal">Reveal</option>
                        <option value="snazzy">Snazzy</option>
                        <option value="sunset">Sunset</option>
                        <option value="vice">Vice (80s)</option>
                        <option value="winter-is-coming">Winter is Coming</option>
                        <option value="yolo">Yolo</option>                    
                    </optgroup>
                    <optgroup label="Community Themes">
                        <option value="ayu">Ayu</option>
                        <option value="bluloco">Bluloco</option>
                        <option value="catppuccin">Catppuccin</option>
                        <option value="cobalt">Cobalt</option>
                        <option value="deepspace">Deep Space</option>
                        <option value="github">GitHub</option>
                        <option value="midnight">Midnight</option>
                        <option value="moonlight">Moonlight</option>
                        <option value="nightowl">Night Owl</option>
                        <option value="nord">Nord</option>
                        <option value="onedark">One Dark</option>
                        <option value="panda">Panda</option>
                        <option value="synthwave">Synthwave '84</option>
                        <option value="tokyonight">Tokyo Night</option>
                    </optgroup>                        
                </select>

                <button id="theme-toggle" class="theme-btn">Light Mode</button>
            </div>
        </nav>
    </header>
    
    <main>
        <!-- Ensure content is wrapped in a class JS can find (for TOC generation) -->
        <div id="content-wrapper" class="post-content">
            {{ content | safe }}
        </div>

        <div id="search-results-wrapper" style="display: none;">
            <h2>Search Results</h2>
            <ul id="search-results-list" class="post-list"></ul>
        </div>
    </main>

    <footer>
        <p>Â© 2025 Built with AI and Love</p>
    </footer>

    <!-- LIGHTBOX CONTAINER (Hidden) -->
    <!-- The JS will fill this automatically with buttons and images -->
    <div id="lightbox"></div>
    
    <!-- SIDEBAR & OVERLAY -->
    <div id="sidebar-overlay"></div>
    
    <aside id="sidebar" class="sidebar">
        <!-- 1. TOP: Header & Home Link -->
        <div class="sidebar-header">
            <div class="logo-row">
                <a href="/" class="logo-link" aria-label="Home">
                    <img src="https://placehold.co/100x100/eee/333?text=Logo" alt="Site Logo" class="site-logo">
                </a>
                <button id="close-sidebar" aria-label="Close Sidebar">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                </button>
            </div>
            
            <div class="sidebar-separator"></div>
            
            <nav class="sidebar-nav-top">
                <a href="/" class="nav-link {% if page.url == '/' %}active{% endif %}">Home</a>
            </nav>
            
            <div class="sidebar-separator"></div>
        </div>

        <!-- 2. MIDDLE: Dynamic Table of Contents (Only visible on posts) -->
        <div class="sidebar-toc" id="toc-container">
            <!-- UPDATED: Removed the "Contents" label text -->
            {% if '/posts/' in page.inputPath %}
                <ul id="toc-list"></ul>
            {% endif %}
        </div>

        <!-- 3. BOTTOM: Footer Links -->
        <div class="sidebar-footer">
            <div class="sidebar-separator"></div>
            <nav class="sidebar-nav-bottom">
                <a href="/archive/" class="nav-link">Archive</a>
                <a href="/tags/" class="nav-link">Tags</a>
                <a href="/about/" class="nav-link">About</a>
                <!-- Add more Pages here -->
            </nav>
        </div>
    </aside>

    <!-- SCRIPTS -->
    <script src="/assets/js/search.js"></script>
    <script src="/assets/js/code-toolbar.js"></script>
    <script src="/assets/js/lightbox.js"></script>
    <script src="/assets/js/sidebar.js"></script>
    <script src="/assets/js/toc.js" defer></script> <!-- Added TOC Script -->
    
    <!-- Theme Logic (Handles UI toggles and localStorage) -->
    <script>
        const themeSelect = document.getElementById('theme-select');
        const themeToggle = document.getElementById('theme-toggle');
        const html = document.documentElement;

        // Set UI to match current state (read from HTML tag set by head script)
        themeSelect.value = html.getAttribute('data-theme-set');
        themeToggle.innerText = html.getAttribute('data-mode') === 'dark' ? 'Light Mode' : 'Dark Mode';

        themeSelect.addEventListener('change', (e) => {
            const set = e.target.value;
            html.setAttribute('data-theme-set', set);
            localStorage.setItem('theme-set', set);
        });

        themeToggle.addEventListener('click', () => {
            const current = html.getAttribute('data-mode');
            const next = current === 'dark' ? 'light' : 'dark';
            html.setAttribute('data-mode', next);
            localStorage.setItem('theme-mode', next);
            themeToggle.innerText = next === 'dark' ? 'Light Mode' : 'Dark Mode';
        });
    </script>
</body>
</html>