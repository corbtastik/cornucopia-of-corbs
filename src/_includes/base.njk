    <!-- Theme & Header Logic -->
    <script>
        const themeSelect = document.getElementById('theme-select');
        const themeToggle = document.getElementById('theme-toggle');

        // Initialize UI state from ThemeManager
        const { id: currentTheme, mode: currentMode } = ThemeManager.getCurrentTheme();
        themeSelect.value = currentTheme;
        themeToggle.innerText = currentMode === 'dark' ? 'Light Mode' : 'Dark Mode';

        // Theme selection change
        themeSelect.addEventListener('change', (e) => {
            const { mode } = ThemeManager.getCurrentTheme();
            ThemeManager.applyTheme(e.target.value, mode);
        });

        // Arrow key navigation for theme select
        themeSelect.addEventListener('keydown', (e) => {
            if (e.key !== 'ArrowUp' && e.key !== 'ArrowDown') return;
            e.preventDefault();
            const options = Array.from(themeSelect.options).filter(opt => !opt.disabled && opt.value);
            if (options.length === 0) return;
            const currentIndex = options.findIndex(opt => opt.value === themeSelect.value);
            const delta = e.key === 'ArrowUp' ? -1 : 1;
            const nextIndex = (currentIndex + delta + options.length) % options.length;
            const nextValue = options[nextIndex]?.value;
            if (!nextValue) return;
            themeSelect.value = nextValue;
            const { mode } = ThemeManager.getCurrentTheme();
            ThemeManager.applyTheme(nextValue, mode);
        });

        // Dark/Light mode toggle
        themeToggle.addEventListener('click', () => {
            const newMode = ThemeManager.toggleMode();
            themeToggle.innerText = newMode === 'dark' ? 'Light Mode' : 'Dark Mode';
        });

        // Track header height for scroll calculations
        function updateHeaderHeight() {
            const header = document.querySelector('header');
            if (header) document.documentElement.style.setProperty('--header-height-real', header.getBoundingClientRect().height + 'px');
        }
        window.addEventListener('load', updateHeaderHeight);
        window.addEventListener('resize', updateHeaderHeight);
        updateHeaderHeight();
    </script>
