---
layout: base.njk
title: Home
pagination:
  data: collections.posts
  size: 10
  alias: posts
  reverse: true
---

<ul class="post-list">
{% for post in posts %}
    {% include "components/post-item.njk" %}
{% endfor %}
</ul>

<div class="pagination">
    {% if pagination.href.previous %}
        <a href="{{ pagination.href.previous }}"><<< Newer</a>
    {% else %}
        <span></span>
    {% endif %}

    {% if pagination.href.next %}
        <a href="{{ pagination.href.next }}">Older >>></a>
    {% else %}
        <span></span>
    {% endif %}
</div>